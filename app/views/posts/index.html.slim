- @posts.each do |post|
  - post = present(post)
  .row.post
    .col-md-8.col-md-offset-2
      h2.post-title 
        = link_to post.title, post
        - if post.draft
          '  
          .label.label-warning Unpublished
      .post-text = truncate(post.formatted_text, length: 350, separator: ' ', escape: false)
      p = link_to 'Read more &raquo;'.html_safe, post

- if user_signed_in?
  .row
    .col-md-8.col-md-offset-2
      h2 Create new post
      p = link_to 'New Post', new_post_path, class: 'btn btn-default'
